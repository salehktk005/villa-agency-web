pipeline {
    agent any

    environment {
        IMAGE_NAME = "salehktk16/agency_wala"
        TAG = "latest"
    }

    stages {
        stage('Checkout Code') {
            steps {
                // Optional if you want to rebuild the image from Dockerfile
                git branch: 'main',
                    url: 'https://github.com/YOUR_USERNAME/YOUR_REPO.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // If you already have the image on Docker Hub, you can skip build
                    // If you want to build locally from Dockerfile:
                    docker.build("${IMAGE_NAME}:${TAG}")
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Stop and remove old container if exists
                    sh "docker rm -f agency_wala_container || true"
                    // Run new container
                    sh "docker run -d -p 80:80 --name agency_wala_container ${IMAGE_NAME}:${TAG}"
                }
            }
        }
    }

    post {
        success {
            echo "✅ Dockerized website is up and running at http://localhost"
        }
        failure {
            echo "❌ Deployment failed"
        }
    }
}
